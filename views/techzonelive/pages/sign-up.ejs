    <script>
      $(document).on("click", "#submit-from", function(){
         var fname = $("#fname").val();
         var lname = $("#lname").val();
         var userEmailId = $("#userEmailId").val();
         var uname = $("#uname").val();
         var phone = $("#phone").val();
         var password = $("#password").val();
         var cpassword = $("#cpassword").val();

         if(fname == ""){
            $("#errMsg").html("**Please Enter First Name");
            $("#fname").addClass("border border-danger border-3");
         }else{
            $("#errMsg").html("");
            $("#fname").removeClass("border border-danger border-3");
            if(fname.length >= 30){
               $("#errMsg").html("**First Name leangth should lesser then 30!");
               $("#fname").addClass("border border-danger border-3");
            }else{
               $("#errMsg").html("");
               $("#fname").removeClass("border border-danger border-3");
               if(!isNaN(fname)){
                  $("#errMsg").html("**Please Enter a Valid First Name!");
                  $("#fname").addClass("border border-danger border-3");
               }else{
                  $("#errMsg").html("");
                  $("#fname").removeClass("border border-danger border-3");
                  
                  if(lname == ""){
                  $("#errMsg").html("**Please Enter Last Name");
                  $("#lname").addClass("border border-danger border-3");
                  }else{
                     $("#errMsg").html("");
                     $("#lname").removeClass("border border-danger border-3");
                     if(lname.length >= 30){
                        $("#errMsg").html("**Last Name leangth should lesser then 30!");
                        $("#lname").addClass("border border-danger border-3");
                     }else{
                        $("#errMsg").html("");
                        $("#lname").removeClass("border border-danger border-3");
                        if(!isNaN(lname)){
                           $("#errMsg").html("**Please Enter a Valid Last Name!");
                           $("#lname").addClass("border border-danger border-3");
                        }else{
                           $("#errMsg").html("");
                           $("#lname").removeClass("border border-danger border-3");
                           if(userEmailId == ""){
                              $("#errMsg").html("**Please Enter Email!");
                              $("#userEmailId").addClass("border border-danger border-3");
                           }else{
                              $("#errMsg").html("");
                              $("#userEmailId").removeClass("border border-danger border-3");
                              if(userEmailId.indexOf('@') <= 0){
                                 $("#errMsg").html("**Invalid '@' position!");
                                 $("#userEmailId").addClass("border border-danger border-3");
                              }else{
                                 $("#errMsg").html("");
                                 $("#userEmailId").removeClass("border border-danger border-3");
                                 if((userEmailId.charAt(userEmailId.length-4) != ".") && (userEmailId.charAt(userEmailId.length-3) != ".")){
                                 $("#errMsg").html("**Invalid '.' position!");
                                 $("#userEmailId").addClass("border border-danger  border-3");
                                 }else{
                                    if(uname == ""){
                                       $("#errMsg").html("**Please Enter User Name");
                                       $("#uname").addClass("border border-danger border-3");
                                    }else{
                                       $("#errMsg").html("");
                                       $("#uname").removeClass("border border-danger border-3");
                                       if(uname.length >= 30){
                                          $("#errMsg").html("**User Name leangth should lesser then 30!");
                                          $("#uname").addClass("border border-danger border-3");
                                       }else{
                                          $("#errMsg").html("");
                                          $("#uname").removeClass("border border-danger border-3");
                                          if(!isNaN(uname)){
                                             $("#errMsg").html("**Please Enter a Valid User Name!");
                                             $("#uname").addClass("border border-danger border-3");
                                          }else{
                                             $("#errMsg").html("");
                                             $("#uname").removeClass("border border-danger border-3");
                                             if(phone == ""){
                                                $("#errMsg").html("**Please Phone #!");
                                                $("#phone").addClass("border border-danger border-3");
                                             }else{
                                                $("#errMsg").html("");
                                                $("#phone").removeClass("border border-danger border-3");
                                                if(isNaN(phone)){
                                                   $("#errMsg").html("**Enter only numbers in Phone #!");
                                                   $("#phone").addClass("border border-danger border-3");
                                                }else{
                                                   $("#errMsg").html("");
                                                   $("#phone").removeClass("border border-danger border-3");
                                                   if(phone.length < 11){
                                                      $("#errMsg").html("**Please Enter valid Phone Number!");
                                                      $("#phone").addClass("border border-danger border-3");
                                                   }else{
                                                      $("#errMsg").html("");
                                                      $("#phone").removeClass("border border-danger border-3");
                                                      if(phone.length > 12){
                                                         $("#errMsg").html("**Please Enter valid Phone Number!");
                                                         $("#phone").addClass("border border-danger border-3");
                                                      }else{
                                                         $("#errMsg").html("");
                                                         $("#phone").removeClass("border border-danger border-3");
                                                         if(password == ""){
                                                            $("#errMsg").html("**Please Enter Password!");
                                                            $("#password").addClass("border border-danger border-3");
                                                         }else{
                                                            $("#errMsg").html("");
                                                            $("#password").removeClass("border border-danger border-3");
                                                            if(cpassword == ""){
                                                               $("#errMsg").html("**Please Confirm Your Password!");
                                                               $("#cpassword").addClass("border border-danger border-3");
                                                            }else{
                                                               $("#errMsg").html("");
                                                               $("#cpassword").removeClass("border border-danger border-3");
                                                               if(password == cpassword){
                                                                  var userObject = {
                                                                     "fname" : fname,
                                                                     "lname" : lname,
                                                                     "userEmailId" : userEmailId,
                                                                     "uname" : uname,
                                                                     "phone" : phone,
                                                                     "password" : password,
                                                                     "cpassword" : cpassword
                                                                  }
                                                                  // console.log(userObject);
                                                                  localStorage.setItem("userLoginAuth", JSON.stringify(userObject));
                                                                  swal({
                                                                     title: "Successfully Registered!",
                                                                     text: "Your account has been Registered!",
                                                                     icon: "success",
                                                                     dangerMode : false,
                                                                     button: "Ok",
                                                                  }).then(function(success){
                                                                     if(success){
                                                                        location.reload();
                                                                     }
                                                                  });
                                                               }else{
                                                                  $("#errMsg").html("**Passwords aree not matching");       
                                                                  $("#cpassword").addClass("border border-danger border-3");

                                                               }
                                                            }
                                                         }
                                                      }
                                                   }  
                                                }
                                             }
                                          }
                                       }
                                    }
                                 }
                              }
                           }
                        }
                     }
                  }

               }
            }
         }
      })
    </script>
