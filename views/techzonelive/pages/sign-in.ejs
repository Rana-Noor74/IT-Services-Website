    <script>
      $(document).on("click", "#submit-from", function(){
         var userEmailId = $("#userEmailId").val();
         var userPassword = $("#userPassword").val();
         if(userEmailId == ""){
            $("#errMsg").html("**Please Enter Email!");
            $("#userEmailId").addClass("border border-danger border-3");
         }else{
            $("#errMsg").html("");
            $("#userEmailId").removeClass("border border-danger border-3");
            if(userEmailId.indexOf('@') <= 0){
               $("#errMsg").html("**Invalid '@' position!");
               $("#userEmailId").addClass("border border-danger border-3");
            }else{
               $("#errMsg").html("");
               $("#userEmailId").removeClass("border border-danger border-3");
               if((userEmailId.charAt(userEmailId.length-4) != ".") && (userEmailId.charAt(userEmailId.length-3) != ".")){
               $("#errMsg").html("**Invalid '.' position!");
               $("#userEmailId").addClass("border border-danger  border-3");
               }else{
                  if(userPassword == ""){
                     $("#errMsg").html("**Please Enter Password!");
                     $("#userPassword").addClass("border border-danger border-3");
                  }else{
                     $("#errMsg").html("");
                     $("#userPassword").removeClass("border border-danger border-3");
                     var localStorageData = localStorage.getItem("userLoginAuth");
                     console.log(localStorageData);
                     var userObject = JSON.parse(localStorageData);
                     if(userObject.userEmailId != userEmailId){
                        $("#errMsg").html("**Please Enter correct Email!");
                     }else{
                        $("#errMsg").html("");
                        if(userObject.password != userPassword){
                           $("#errMsg").html("**Password is wrong, Enter correct password to login!");
                        }else{
                           $("#errMsg").html("");
                           location.replace("/")
                        }
                     }
                  }
               }
            }
         }
      })
    </script>
